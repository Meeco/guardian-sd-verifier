{
  "preset": "ts-jest/presets/default-esm",
  "testRegex": ".*\\.test\\.(ts|tsx)$",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "extensionsToTreatAsEsm": [".ts"],
  "transform": {
    "^.+\\.(ts|tsx)?$": [
      "ts-jest",
      {
        "useESM": true,
        "tsconfig": "tsconfig.json"
      }
    ]
  },
  "transformIgnorePatterns": []
}
